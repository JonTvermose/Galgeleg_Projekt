<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dk.jon.lektion2_galgeleg.side2_akt">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainImgImageView"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/galge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ordTextView"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/mainImgImageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bogstavEditText"
        android:hint="Indtast et bogstav"
        android:textSize="25dp"
        android:layout_below="@+id/ordTextView"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tidligereGætTextView"
        android:layout_below="@+id/bogstavEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Tidligere gæt: " />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Gæt!"
            android:id="@+id/gætButton"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</RelativeLayout>
